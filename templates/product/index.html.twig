{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Code</th>
                <th>Added</th>
                <th>DiscontinuedAt</th>
                <th>Timestamp</th>
                <th>Stock</th>
                <th>Cost</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.code }}</td>
                <td>{{ product.added ? product.added|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.discontinuedAt ? product.discontinuedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.timestamp ? product.timestamp|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.cost }}</td>
                <td>
                    <a href="{{ path('showProduct', {'id': product.id}) }}">show</a>
                    <a href="{{ path('editProduct', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('createNewProduct') }}">Create new</a>
{% endblock %}

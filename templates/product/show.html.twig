{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>Added</th>
                <td>{{ product.addedAt ? product.addedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DiscontinuedAt</th>
                <td>{{ product.discontinuedAt ? product.discontinuedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ product.timestamp ? product.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ product.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('products') }}">back to list</a>

    <a href="{{ path('editProduct', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
